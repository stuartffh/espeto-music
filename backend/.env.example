# Configuração do Servidor
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:5173
TV_PANEL_URL=http://localhost:5174

# Database (SQLite - será criado automaticamente)
DATABASE_URL="file:./dev.db"

# Mercado Pago
# Obtenha suas credenciais em: https://www.mercadopago.com.br/developers/panel
MERCADOPAGO_ACCESS_TOKEN=your_mercadopago_access_token_here
MERCADOPAGO_PUBLIC_KEY=your_mercadopago_public_key_here

# YouTube Data API
# Obtenha sua chave em: https://console.cloud.google.com/apis/credentials
YOUTUBE_API_KEY=your_youtube_api_key_here

# Configurações do Sistema
PRECO_MUSICA=5.00
MAX_MUSICAS_FILA=50

# URL Base para QR Codes (em produção, use seu domínio)
BASE_URL=http://localhost:5173
